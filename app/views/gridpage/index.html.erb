                      <div class="block-title">
                          <strong><span>Sort By</span></strong>
                      </div>
                      <div class="block-content">
                          <p class="block-subtitle">Shopping Options</p>
                          <div id="narrow-by-list">
                              <div class="layered layered-Category">
                                  <h2>Category</h2>
                                  <div class="content-shopby">
                                      <ol>
                                      <% @categories.each do |category| %>
                                          <li><%= link_to category.name,gridpage_index_path(:category => category.name)  %></a></li>
                                      <% end %>
                                      </ol>
                                  </div>
                              </div>
                              <div class="layered layered-price">
                                  <h2>Price</h2>
                                  <div class="content-shopby">
                                      <div id="slider-range"></div>
                                      <div id="search_pr">
                                          <%= form_tag(gridpage_index_path, method: :get) do %>
                                              <%= text_field_tag "first_price", nil, width: 100 %>
                                              <%= text_field_tag "last_price"%>
                                              <%= submit_tag 'SHOW', class: 'btn btn-default', id: 'search_price' %>
                                          <% end %>
                                      </div>
                                  </div>
                              </div>
                              <div class="layered layered-Manufacturer">
                                  <h2>Manufacturer</h2>
                                  <div class="content-shopby">
                                      <ol>
                                          <li><a href="#">Aliquam</a></li>
                                          <li><a href="#">Duis tempus id </a></li>
                                          <li><a href="#">Leo quis molestie. </a></li>
                                          <li><a href="#">Suspendisse </a></li>
                                          <li><a href="#">Nunc gravida </a></li>
                                      </ol>
                                  </div>
                              </div>
                              <div class="layered layered-Color">
                                  <h2>Color</h2>
                                  <div class="content-shopby">
                                      <ol>
                                          <% @color_product.each do |color| %>
                                          <li><%= link_to color,gridpage_index_path(:color => color)  %></a></li>
                                          <% end %>
                                      </ol>
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div><!-- /sort -->
                  <div class="block block-list">
                      <div class="block-title">
                          <strong><span>Compare</span></strong>
                      </div>
                      <div class="block-content">
                          <p class="empty">You have no items to compare.</p>
                      </div>
                  </div><!-- /.compare -->
                  <div class="banner-left"><a href="#"><img src="assets/ads-01.jpg" alt=""></a>
                      <div class="banner-content">
                          <h1>sale up to</h1>
                          <h2>20% off</h2>
                          <p>on selected products</p>
                          <a href="#">buy now</a>
                      </div>
                  </div>
                  <div class="block">
                      <div class="title-group"><h2>Special Offer</h2></div>
                      <div id="special-offer" class="owl-container">
                          <div class="owl">
                          <% @specialoffer.each do |t| %>
                              <div class='sepecialoffer-item item'>
                                  <div class="item-inner first">
                                      <div class="images-container">
                                          <a href="#" title="Primis in faucibus" class="product-image">
                                              <%= image_tag t.image.thumb.url %>
                                          </a>
                                      </div>
                                      <div class="des-container">
                                          <h2 class="product-name"><a href="#" title="Primis in faucibus"><%= t.name %></a></h2>
                                          <div class="price-box">
                                              <p class="special-price">
                                                  <span class="price">$<%= t.disprice %></span>
                                              </p>
                                              <p class="old-price">
                                                  <span class="price">$<%= t.price %></span>
                                              </p>
                                          </div>
                                          <div class="ratings">
                                              <div class="rating-box">
                                                  <div class="rating" style="width:87%"></div>
                                              </div>
                                              <span class="amount"><a href="#">1 Review(s)</a></span>
                                          </div>
                                      </div>
                                  </div>
                                  <div class="item-inner">
                                      <div class="images-container">
                                          <a href="#" title="Accumsan elit " class="product-image">
