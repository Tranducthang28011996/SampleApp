<%= form_for [:admin, @product] do |f| %>
<div class="row">
  <div class="col-xs-4" style="margin-left: 70px">
    <label>Name</label>
    <%= f.text_field :name, class: "form-control" %>
    <label>Price</label>
    <%= f.text_field :price, class: "form-control" %>
    <label>DisPrice</label>
    <%= f.text_field :disprice, class: "form-control" %>
    <label>Trademark</label>
    <%= f.text_field :trademark, class: "form-control" %>
    <label>Size</label>
    <%= f.text_field :size, class: "form-control" %>
    <label>Color</label>
    <%= f.text_field :color, class: "form-control" %>
    <label>Image</label>
    <%= f.file_field :image, class: "form-control" %>
    <label>Description</label>
    <%= f.text_area :description, class: "form-control" %>
    <label>ToTal</label>
    <%= f.text_field :total, class: "form-control" %>
    <label>Select</label>
    <%= f.collection_select :subcategory_id, Subcategory.all, :id, :name, class: 'form-control' %>
    <%= f.submit "Save",  class: 'btn btn-primary' %>
  </div>
</div>
<% end %>